#!/usr/bin/env perl

use strict;
use warnings;

use Getopt::Long;
use Pod::Usage;

my $listen    = ':443';
my $backend   = '127.0.0.1:8080';
my $cert_file = 'cacert.pem';
my $key_file  = 'cakey.pem';
my $debug;
my $help;

pod2usage(1) unless @ARGV;

GetOptions(
    "listen=s"  => \$listen,
    "backend=s" => \$backend,
    "debug"     => \$debug,
    "help|?"    => \$help
) or pod2usage(2);

pod2usage(1) if $help;

if ($debug) {
    $ENV{APP_TLSME_DEBUG} = 1;
}

require App::TLSMe;
App::TLSMe->new(
    listen    => $listen,
    backend   => $backend,
    cert_file => $cert_file,
    key_file  => $key_file
)->run;

__END__

=head1 NAME

tlsme - TSL/SSL proxy

=head1 SYNOPSIS

tlsme [options] [file ...]

Options:

    -help            brief help message
    -man             full documentation

=head1 OPTIONS

=over 8

=item B<-help>

Print a brief help message and exits.

=item B<-man>

Prints the manual page and exits.

=back

=head1 DESCRIPTION

B<This program> will read the given input file(s) and do something
useful with the contents thereof.

=cut
